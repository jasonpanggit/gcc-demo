# ==============================================================================
# AZURE VIRTUAL DESKTOP (AVD) CONFIGURATION
# ==============================================================================
deploy_nongen_avd = false  # Deploy AVD in Non-Gen VNet environment

# AVD Network Configuration - Uses Non-Gen VNet subnets
nongen_avd_subnet_prefix = "100.0.1.0/24"           # Subnet for AVD session hosts
nongen_private_endpoint_subnet_prefix = "100.0.2.0/24"  # Subnet for private endpoints

# AVD Host Pool Configuration
avd_host_pool_type = "Pooled"                        # Pooled or Personal
avd_host_pool_load_balancer_type = "BreadthFirst"    # BreadthFirst, DepthFirst, or Persistent
avd_host_pool_maximum_sessions = 10                  # Max sessions per host
avd_host_pool_start_vm_on_connect = true            # Auto-start VMs on connect

# AVD Session Host Configuration
avd_session_host_count = 2                          # Number of session hosts
avd_session_host_vm_size = "Standard_D2s_v3"       # VM size for session hosts
avd_session_host_admin_username = "avdadmin"        # Admin username
avd_session_host_image_publisher = "MicrosoftWindowsDesktop"
avd_session_host_image_offer = "Windows-11"
avd_session_host_image_sku = "win11-22h2-avd"      # Windows 11 multi-session

# AVD Enterprise Features
avd_aad_join_enabled = true           # Enable Azure AD join for session hosts
avd_fslogix_enabled = true            # Enable FSLogix profile containers
avd_private_endpoints_enabled = true  # Enable private endpoints for storage

# AVD FSLogix Configuration
avd_fslogix_storage_account_tier = "Premium"         # Standard or Premium
avd_fslogix_storage_account_replication = "LRS"      # LRS or ZRS
avd_fslogix_file_share_quota_gb = 1024               # File share quota in GB

